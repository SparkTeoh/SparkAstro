---
import MainLayout from "../../layouts/MainLayout.astro";
import ArticleCard from "../../components/ui/ArticleCard.astro";
import VideoCard from "../../components/ui/VideoCard.astro";
import SearchForm from "../../components/ui/SearchForm.astro";
import { getCollection } from 'astro:content';
import type { CollectionEntry } from "astro:content";
import videoData from "../../data/videoData.json";

const currentPage: number | null = +Astro.url.searchParams.get('page')! || 1;

const allBlogArticles: CollectionEntry<'blog'>[] = (await getCollection('blog'))
  .sort((a:CollectionEntry<'blog'>, b:CollectionEntry<'blog'>) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// 从JSON文件中获取视频数据，只显示前4个视频
const featuredVideos = videoData.featuredVideos.slice(0, 4);

---

<MainLayout title="内容中心 - Spark官方网站">
	<main class="space-y-20">
        <!-- YouTube视频部分 -->
        <section class="py-12 px-4 mx-auto max-w-screen-xl lg:py-20 lg:px-3 bg-background">
            <div class="mx-auto max-w-screen-sm text-center lg:mb-16 mb-8">
                <h2 class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-primary">📺 Spark理财视频</h2>
                <p class="font-light sm:text-xl text-gray-700">通过视频学习理财知识，获取最新的投资见解和市场分析</p>
                <div class="mt-6">
                    <a 
                        href="https://www.youtube.com/@Mr18SparkLiang/videos" 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="inline-flex items-center px-6 py-3 bg-red-600 hover:bg-red-700 text-white font-medium rounded-xl transition-colors duration-200"
                    >
                        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                        </svg>
                        订阅我的频道
                    </a>
                </div>
            </div> 

            <div class="grid gap-8 lg:grid-cols-2 xl:grid-cols-2">
                {featuredVideos.map(video => (
                    <VideoCard 
                        title={video.title}
                        description={video.description}
                        videoId={video.videoId}
                        duration={video.duration}
                        publishDate={video.publishDate}
                        views={video.views}
                    />
                ))}
            </div>
        </section>

        <!-- 博客文章部分 -->
        <section class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-3">
            <div class="mx-auto max-w-screen-sm text-center lg:mb-16 mb-8">
                <h2 class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-primary">📖 理财文章</h2>
                <p class="font-light sm:text-xl text-gray-700">深度分析和实用指南，帮助您做出明智的财务决策</p>
            </div> 
            <br>
            <SearchForm />
            <br>
            <div class="grid gap-8 lg:grid-cols-2">
                {allBlogArticles.map(article => (
                    <ArticleCard article={article} />
                ))}
            </div>  
        </section>
	</main>
</MainLayout>