      // å¦‚æœæ²¡æœ‰æ‰¾åˆ° blogDataï¼Œè¿”å›é»˜è®¤æ•°æ®
      return {
        title: file.replace('.astro', '').replace(/-/g, ' '),
        summary: 'Astro åšå®¢æ–‡ç« ',
        author: 'Spark Liang',
        pubDate: new Date(),
        tags: ['Astro'],
        type: 'æŠ€æœ¯æ–‡ç« ',
        isAstro: true,
        link: `/astro-blog/${file.replace('.astro', '')}`,
        contentType: 'astro',
        isExternal: false,
        featured: false
      };
    }).filter(Boolean); // è¿‡æ»¤æ‰ null å€¼
  }
} catch (error) {
